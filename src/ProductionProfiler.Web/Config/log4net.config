<log4net debug="false">

  <appender name="ProfilingAppender" type="RequestProfiler.Log4Net.Log4NetProfilingAppender">
    <threshold value="DEBUG" />
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%d - %m%n" />
    </layout>
  </appender>

  <logger name="Profiler">
    <appender-ref ref="ProfilingAppender"/>
    <priority value="DEBUG"/>
    <!--To see full debugging trace, turn the priority value above to "DEBUG".-->
  </logger>
</log4net>